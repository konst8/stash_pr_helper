{
  "manifest_version": 2,

  "name": "Stash PR Helper",
  "description": "Helps Stash users to fill in Pull Requests' descriptions and reviewers",
  "version": "1.0.0.3",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png" 
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Fill in PR's reviewers"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://*/*pull-requests?*", "https://*/*compare/commits?*", "https://*/*compare/diff?*"],
      "js": ["libs/jquery-ui-1.12.1.custom/external/jquery/jquery.js", "contentScript.js"],
      "css": ["content.css"]
    }
  ],

  "web_accessible_resources": [
    "contentEject.js"
  ],

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}