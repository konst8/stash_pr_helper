{
  "manifest_version": 2,

  "name": "Stash helper",
  "description": "Fills in Pull Request's reviewers",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "icons": { 
    "48": "images/icon48.png",
    "128": "images/icon128.png" 
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Fill in PR's reviewers"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": [
    "codeToEject.js"
  ],

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}